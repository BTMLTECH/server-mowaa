{
  "compilerOptions": {
    "target": "ES2022",                         
    "module": "NodeNext",                     
    "moduleResolution": "NodeNext",             
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "resolveJsonModule": true,               
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
